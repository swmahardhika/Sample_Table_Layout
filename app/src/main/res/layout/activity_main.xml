<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="200dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="146dp"
            android:layout_height="100dp"
            android:contentDescription="@string/tlogo"
            app:srcCompat="@drawable/login" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/loginform"
            android:textColor="@color/cLabel"
            android:textSize="25sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:drawablePadding="-25dp"
            android:gravity="center"
            android:text="@string/tUsername"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableTint="#faa524"
            android:drawableLeft="@android:drawable/ic_dialog_email" />

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:hint="@string/tUsername"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textView4"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="15dp"
            android:text="@string/tPassword"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableTint="#faa524"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock" />

        <TextView
            android:id="@+id/password"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/tPassword"
            android:inputType="textPassword"
            android:padding="5dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_span="2"
            android:text="@string/login"
            android:textSize="13sp"
            android:textStyle="bold"
            app:backgroundTint="#faa524" />
    </TableRow>

</TableLayout>